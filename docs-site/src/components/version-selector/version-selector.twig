{% set options = bolt.data.boltReleases.options %}

{% set children %}
  <bolt-select should-sort-items="true" item-select-text="" search-placeholder-value="ex. v2.0.0">
    {% include("@bolt-components-form/form-select.twig") with {
      options: options,
      attributes: {
        class: [
          "js-bolt-version-selector",
          "c-bds-version-selector",
          "u-bolt-padding-top-xsmall",
          "u-bolt-padding-left-small",
          "u-bolt-padding-bottom-xsmall",
          "u-bolt-padding-right-medium",
        ]
      },
    } only %}
  </bolt-select>
{% endset %}

{% include("@bolt-components-form/form-element.twig") with {
  attributes: {
    class: "u-bolt-margin-left-small"
  },
  children: children,
} only %}

